/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    And (a=sel, b=b, out=selAndb);
    Not (in=sel, out=Notsel);
    And (a=a, b=Notsel, out=aAndNotsel);
    Or (a=selAndb, b=aAndNotsel, out=out);
}

